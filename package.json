{
  "name": "express-rest-api-boilerplate",
  "version": "1.0.0",
  "description": "Production-ready RESTful APIs using Node.js, Express and Mongodb boilerplate 2022",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node --es-module-specifier-resolution=node src/index.js",
    "dev": "nodemon --es-module-specifier-resolution=node src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/knaazimkhan/express-rest-api-boilerplate.git"
  },
  "keywords": [
    "node",
    "node.js",
    "express",
    "rest",
    "api",
    "boilerplate",
    "mongodb",
    "mongoose",
    "nosql",
    "es6",
    "es7",
    "es8",
    "es9",
    "joi",
    "prettier",
    "jwt",
    "passport"
  ],
  "author": "Naazim Khan <knaazimkhan@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "bugs": {
    "url": "https://github.com/knaazimkhan/express-rest-api-boilerplate/issues"
  },
  "homepage": "https://github.com/knaazimkhan/express-rest-api-boilerplate#readme",
  "imports": {
    "#config/*": "./src/config/*",
    "#constants/*": "./src/constants/*",
    "#controllers/*": "./src/controllers/*",
    "#middlewares/*": "./src/middlewares/*",
    "#models/*": "./src/models/*",
    "#routes/v1": "./src/routes/v1/",
    "#services/*": "./src/services/*",
    "#utils/*": "./src/utils/*",
    "#validations/*": "./src/validations/*"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.4.0",
    "helmet": "^5.0.2",
    "http-status": "^1.5.2",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.3",
    "mongoose": "^6.3.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.5",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.3.0",
    "validator": "^13.7.0",
    "winston": "^3.7.2",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2"
  }
}
